  "private": true,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "playwright install --with-deps",
    "test:bdd": "cucumber-js --config cucumber.cjs",
    "test:bdd:chromium": "cross-env BROWSER=chromium cucumber-js --config cucumber.cjs",
    "test:bdd:firefox": "cross-env BROWSER=firefox cucumber-js --config cucumber.cjs",
    "test:bdd:webkit": "cross-env BROWSER=webkit cucumber-js --config cucumber.cjs",
    "test:bdd:with-report": "cucumber-js --config cucumber.cjs && node scripts/generate-report.cjs",
    "report:html": "node scripts/generate-report.cjs",
    "report:open": "npx http-server reports/html -o"
  },
